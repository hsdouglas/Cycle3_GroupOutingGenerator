<%= simple_form_for(@credit_card) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :card_type %>
    <%= f.input :number %>
    <%= f.input :expiration_month %>
    <%= f.input :expiration_year %>
    <%= f.input :zipcode %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
