<p id="notice"><%= notice %></p>


<div class="navigation-links">
  <div class="right-link">
    <%= link_to 'Edit', edit_user_path(@user) %>
  </div>
  <div class="left-link">
    <%= link_to 'Back', users_path %>
  </div>
</div>

<% unless @user.photo_url.nil? %>
  <div class='user-image'>
    <%= image_tag @user.photo_url, style: "max-width: 200px"  %>
  </div>
<% end %>
</div>

<div class="user-name">
  <%= @user.anonymized_name %>
</div>

<div class="user-bio">
  <%= @user.bio %>
</div>

<div class="table-title">Purchase History</div>
<ul class="table">
  <% @tickets.each do |ticket| %>
      <li><%= link_to ticket.event.title, event_path(ticket.event_id) %></li>
  <% end %>
</ul>
