<p id="notice"><%= notice %></p>

<% unless @group.tickets.first.event.poster_url.nil? %>
  <p><%= image_tag @group.tickets.first.event.poster_url, style: "max-width: 200px"  %></p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @group.title %>
</p>

<p>
  <strong>Date of Your Outing:</strong>
  <%= @group.tickets.first.event.start %>
</p>

<p><strong>People Joining:</strong></p>
<ul>
  <% @group.tickets.each do |ticket| %>
  	<li><%= ticket.user.first_name %> <%= ticket.user.last_name %> | <%= ticket.user.bio %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
